@using EntityLayer.Concrete
@model List<Category>
@{
    Layout = null;
}

<table border="1">
    <thead>
        <tr>
            <th>CategoryID</th>
            <th>Category Adı</th>
            <th>Category Açıklama</th>
            <th>Category Durumu</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CategoryID</td>
                <td>@item.CategoryName</td>
                <td>@item.CategoryDescription</td>
                <td>@item.CategoryStatus</td>
            </tr>
        }
    </tbody>
</table>
